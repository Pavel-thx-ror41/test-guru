<div class="card border-primary">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group card-body bg-light mb-0">
      <p>
        <%= f.label :first_name %>
        <%= f.text_field(
              :first_name,
              autofocus: true,
              autocomplete: "first_name",
              class: "form-control",
              placeholder: (t('helpers.enter') + " " + t('helpers.label.user.first_name'))
            )
        %>
      </p>

      <p>
        <%= f.label :last_name %>
        <%= f.text_field(
              :last_name,
              autofocus: true,
              autocomplete: "last_name",
              class: "form-control",
              placeholder: (t('helpers.enter') + " " + t('helpers.label.user.last_name'))
            )
        %>
      </p>

      <p>
        <%= f.label :email %>
        <%= f.email_field(
              :email,
              autofocus: true,
              autocomplete: "email",
              class: "form-control",
              placeholder: (t('helpers.enter') + " " + t('helpers.label.user.email'))
            )
        %>
      </p>

      <div>
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t('devise.registrations.characters_minimum') %>)</em>
        <% end %>
        <%= f.password_field(
              :password,
              autocomplete: "new-password",
              class: "form-control",
              placeholder: (t('helpers.enter') + " " + t('helpers.label.user.password')),
              aria_describedby: "user_passwordFeedback"
            )
        %>
        <div id="user_passwordFeedback" class="invalid-feedback">
          <%= t('helpers.label.user.passwords_must_be_same') %>
        </div>

        <%= f.label :password_confirmation %>
        <%= f.password_field(
              :password_confirmation,
              autocomplete: "new-password",
              class: "form-control",
              placeholder: (t('helpers.enter') + " " + t('helpers.label.user.password_confirmation')),
              aria_describedby: "user_password_confirmationFeedback"
            )
        %>
        <div id="user_password_confirmationFeedback" class="invalid-feedback">
          <%= t('helpers.label.user.passwords_must_be_same') %>
        </div>
      </div>

      <div class="tg-actions">
        <%= link_to t("helpers.back"), :back, class: "tg-link-back" %>
        <%= f.submit %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-3">
  <%= render "devise/shared/links" %>
</div>
