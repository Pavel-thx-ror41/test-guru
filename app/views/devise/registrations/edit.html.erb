<div class="card border-primary">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="form-group card-body bg-light mb-0">
      <p>
        <%= f.label :first_name %>
        <%= f.text_field(
              :first_name,
              autofocus: true,
              autocomplete: "first_name",
              class: "form-control",
              placeholder: (t('helpers.enter') + " " + t('helpers.label.user.first_name'))
            )
        %>
      </p>

      <p>
        <%= f.label :last_name %>
        <%= f.text_field(
              :last_name,
              autofocus: true,
              autocomplete: "last_name",
              class: "form-control",
              placeholder: (t('helpers.enter') + " " + t('helpers.label.user.last_name'))
            )
        %>
      </p>

      <p>
        <%= f.label :email %>
        <%= f.email_field(
              :email,
              autofocus: true,
              autocomplete: "email",
              class: "form-control",
              placeholder: (t('helpers.enter') + " " + t('helpers.label.user.email'))
            )
        %>
      </p>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p><strong><%= t('.currently_waiting_confirmation_for') + resource.unconfirmed_email.to_s %></strong></p>
      <% end %>

      <p>
        <%= f.label :password %> <i>(<%= t('devise.registrations.leave_blank_if') %>)</i>
        <%= f.password_field(
              :password,
              autocomplete: "new-password",
              class: "form-control",
              placeholder: (t('helpers.enter') + " " + t('helpers.label.user.password') + ", " + t('devise.registrations.leave_blank_if'))
            )
        %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> <%= t('devise.registrations.characters_minimum') %></em>
        <% end %>
      </p>

      <p>
        <%= f.label :password_confirmation %> <i>(<%= t('devise.registrations.leave_blank_if') %>)</i>
        <%= f.password_field(
            :password_confirmation,
            autocomplete: "new-password",
            class: "form-control",
            placeholder: (t('helpers.enter') + " " + t('helpers.label.user.password_confirmation'))
            )
        %>
      </p>

      <p>
        <%= f.label :current_password %>
        <%= f.password_field(
              :current_password,
              autocomplete: "current-password",
              class: "form-control",
              placeholder: (t('helpers.enter') + " " + t('helpers.label.user.current_password'))
            )
        %>
      </p>

      <div class="tg-actions">
        <%= link_to t("helpers.back"), :back, class: "tg-link-back" %>
        <%= f.submit %>
        <%= button_to t(".cancel"), registration_path(resource_name), class: "tg-btn-danger same_line_right", data: { confirm: t('helpers.submit.confirm') }, method: :delete %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-3">
  <%= render "devise/shared/links" %>
</div>
